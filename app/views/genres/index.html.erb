<p id="notice" class="text-center"><%= notice %></p>

<div class="container">
  <div class="d-inline-block">
    <h1>Genres</h1>
    <%= link_to 'New genre', new_genre_path, :class => "btn btn-primary btn-sm"%>

<div style="float: right; margin-bottom:5px">
  <%= form_tag(genres_path, method: :get) do %>
    <%= text_field_tag :toSearch, params[:toSearch] %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>
</div>

  <div>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th align="center"><%= sortable "name", "name" %></th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td align="center"><%= genre.name %></td>
          <td align="center"><%= link_to 'Details', genre, :class => "btn btn-info btn-sm" %></td>
          <td align="center"><%= link_to 'Edit', edit_genre_path(genre), :class => "btn btn-info btn-sm" %></td>
          <td align="center"><%= link_to 'Delete', genre, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="flickr_pagination">
    <div class="page_info">
      <%= page_entries_info @genres %>
    </div>
    <%= will_paginate @genres, :container => false %>
  </div>

<br>
