<p id="notice" class="text-center"><%= notice %></p>

<h1>Genres</h1><hr>

<div class="d-flex justify-content-between">
    <%= link_to 'New Genre', new_genre_path, :class => "btn btn-primary btn-sm"%>
    <div>
    <%= form_tag(genres_path, :method => "get", class: 'form-inline my-2 my-lg-0') do %>
          <%= text_field_tag :toSearch, params[:toSearch], placeholder: "Search genres", class: 'form-control mr-sm2', type: "search" %>
          <%= submit_tag "Search", :name => nil, class: 'btn btn-outline-primary my-2 my-sm-0 ml-2' %>
      <% end %>
    </div>
  </div>

  <div>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th align="center"><%= sortable "name", "Name" %></th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td align="left"><%= genre.name %></td>
          <td align="center"><%= link_to 'Details', genre, :class => "btn btn-info btn-sm" %></td>
          <td align="center"><%= link_to 'Edit', edit_genre_path(genre), :class => "btn btn-info btn-sm" %></td>
          <td align="center"><%= link_to 'Delete', genre, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<br>
<%= will_paginate @genres,list_classes: %w(pagination justify-content-center) %>
