<p id="notice" class="text-center"><%= notice %></p>

  <h1>Author details</h1>
  <p>
    <strong>Firstname:</strong>
    <%= @author.firstname %>
  </p>

  <p>
    <strong>Lastname:</strong>
    <%= @author.lastname %>
  </p>

  <p>
    <strong>Nationality:</strong>
    <%= @author.nationality %>
  </p>

  <p>
    <strong>Date Of Birth:</strong>
    <%= @author.date_of_birth %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @author.bio %>
  </p>
  <%= link_to 'Back', authors_path, class: 'btn btn-outline-info btn-sm' %>
  <%= link_to 'Edit', edit_author_path(@author), class: 'btn btn-info btn-sm' %>
  <%= link_to 'Destroy', @author, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
