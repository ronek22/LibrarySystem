<%= form_with(model: author, local: true) do |form| %>
  <% if author.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(author.errors.count, "error") %> prohibited this author from being saved:</h2>

      <ul>
      <% author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :firstname, :class => "control-label col-md-1" %>
    <%= form.text_field :firstname %>
  </div>

  <div class="field">
    <%= form.label :lastname, :class => "control-label col-md-1" %>
    <%= form.text_field :lastname %>
  </div>

  <div class="field">
    <%= form.label :nationality, :class => "control-label col-md-1" %>
    <%= form.text_field :nationality %>
  </div>

  <!--TU BEDZIE ZMIANA  -->
  <div class="field">
    <%= form.label :date_of_birth, "Date of Birth", :class => "control-label col-md-1" %>
    <%= form.date_select :date_of_birth, :start_year => Date.current.year, :end_year => 1900 %>
  </div>

  <div class="field">
    <%= form.label :bio, :class => "control-label col-md-1" %>
    <%= form.text_area :bio %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
