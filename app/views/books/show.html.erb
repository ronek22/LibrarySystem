<p id="notice" class="text-center"><%= notice %></p>

  <h1>Book details</h1>
  <p>
    <strong>Title:</strong>
    <%= @book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @book.author.name %>
  </p>

  <p>
    <strong>Genre:</strong>
    <%= @book.genre.name%>
  </p>

  <p>
    <strong>Year:</strong>
    <%= @book.year %>s
  </p>

  <p>
    <strong>Description:</strong>
    <%= @book.description %>
  </p>

  <%= link_to 'Back', books_path, class: 'btn btn-outline-info btn-sm' %>
  <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-info btn-sm' %>
  <%= link_to 'Destroy', @book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
